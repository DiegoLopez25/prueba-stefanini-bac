  "components": {
    "schemas": {
      "CreateVentaDTO": {
        "required": [
          "detalles"
        ],
        "type": "object",
        "properties": {
          "detalles": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DetalleVentaDTO"
            }
          }
        },
        "additionalProperties": false
      },
      "DetalleVentaDTO": {
        "required": [
          "cantidad",
          "idpro",
          "precio"
        ],
        "type": "object",
        "properties": {
          "idpro": {
            "type": "integer",
            "format": "int32"
          },
          "cantidad": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "precio": {
            "type": "number",
            "format": "double"
          },
          "iva": {
            "type": "number",
            "format": "double"
          },
          "total": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "LoginDTO": {
        "required": [
          "password",
          "usuario"
        ],
        "type": "object",
        "properties": {
          "usuario": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ProductoDTO": {
        "type": "object",
        "properties": {
          "idpro": {
            "type": "integer",
            "format": "int32"
          },
          "codigo": {
            "type": "string",
            "nullable": true
          },
          "nombreProducto": {
            "type": "string",
            "nullable": true
          },
          "precio": {
            "type": "number",
            "format": "double"
          },
          "softDelete": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
