@model WEB.Models.VentaViewModel
@{
    ViewData["Title"] = "Detalle de Venta";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Detalle de Venta #@Model.Idventa</h2>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h5>Información General</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <p><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div class="col-md-4">
                        <p><strong>Vendedor:</strong> @Model.Vendedor</p>
                    </div>
                    <div class="col-md-4">
                        <p><strong>Total:</strong> <span class="text-success fs-5">$@Model.Total.ToString("N2")</span></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-info text-white">
                <h5>Productos Vendidos</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio Unit.</th>
                                <th>IVA</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in Model.Detalles)
                            {
                                <tr>
                                    <td>@detalle.Codigo</td>
                                    <td>@detalle.Producto</td>
                                    <td>@detalle.Cantidad</td>
                                    <td>$@detalle.Precio.ToString("N2")</td>
                                    <td>$@detalle.Iva.ToString("N2")</td>
                                    <td>$@detalle.Total.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-secondary">
                                <td colspan="4" class="text-end"><strong>IVA Total:</strong></td>
                                <td>
                                    <strong>$@Model.Detalles.Sum(d => d.Iva).ToString("N2")</strong>
                                </td>
                                <td></td>
                            </tr>
                            <tr class="table-success">
                                <td colspan="5" class="text-end"><strong>Total General:</strong></td>
                                <td><strong>$@Model.Total.ToString("N2")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
